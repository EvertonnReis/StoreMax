{
  "name": "storemax-sales-system",
  "version": "1.0.0",
  "description": "Real-time Sales System with Interactive Inventory",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev:server": "node --watch server.js",
    "dev:frontend": "cd client && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "build": "cd client && npm run build",
    "preview": "cd client && npm run preview",
    "start": "node server.js"
  },
  "keywords": [
    "sales",
    "inventory",
    "realtime",
    "express",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "mysql2": "^3.16.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
